<resources>

    <declare-styleable name="RangeBar">
        <!-- 模式选择，seekBar则没有等级，关于等级的设置也将无效 -->
        <attr name="mode" format="enum">
            <enum value="0" name="seekBar"/>
            <enum value="1" name="rangeBar"/>
        </attr>
        <!--选择指示图标为图片或者圆形 -->
        <attr name="imgType" format="enum">
            <enum name="img" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
        <attr name="rangePosition" format="enum">
            <enum name="center" value="0"/>
            <enum name="up" value="1"/>
            <enum name="down" value="2"/>
        </attr>

        <!-- 指示图标为图片时的三种状态 -->
        <attr name="disableImg" format="reference"/>
        <attr name="normalImg" format="reference"/>
        <attr name="pressedImg" format="reference"/>

        <!-- 半径 -->
        <attr name="imgRadio" format="dimension"/>

        <!-- 指示图标为圆形时的三种颜色 -->
        <attr name="disableColor" format="color"/>
        <attr name="normalColor" format="color"/>
        <attr name="pressedColor" format="color"/>

        <!-- 横向的颜色和高度 -->
        <attr name="unSelectLineColor" format="color"/>
        <attr name="selectLineColor" format="color"/>
        <attr name="lineHeight" format="dimension"/>

        <!-- 等级的数量、颜色和高度 -->
        <attr name="rangeItem" format="integer"/>
        <attr name="rangeUnSelectedColor" format="color"/>
        <attr name="rangeSelectedColor" format="color"/>
        <attr name="rangeHeight" format="dimension"/>
        <attr name="rangeWidth" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="VoiceLineView">
        <!--中间线的颜色，就是波形的时候，大家可以看到，中间有一条直线，就是那个-->
        <attr name="middleLine" format="color" />
        <!--中间线的高度，因为宽度是充满的-->
        <attr name="middleLineHeight" format="dimension" />
        <!--波动的线的颜色，如果是距形样式的话，刚是距形的颜色-->
        <attr name="voiceLine" format="color" />
        <!--波动线的横向移动速度，线的速度的反比，即这个值越小，线横向移动越快，越大线移动越慢，默认90-->
        <attr name="lineSpeed" format="integer" />
        <!--所输入音量的最大值-->
        <attr name="maxVolume" format="float" />
        <!--灵敏度，默认值是4-->
        <attr name="sensibility">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
            <enum name="four" value="4" />
            <enum name="five" value="5" />
        </attr>
        <!--精细度，绘制曲线的时候，每几个像素绘制一次，默认是1，一般，这个值越小，曲线越顺滑，
            但在一些旧手机上，会出现帧率过低的情况，可以把这个值调大一点，在图片的顺滑度与帧率之间做一个取舍-->
        <attr name="fineness">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SliderVerifyView">
        <attr name="sliderHeight" format="dimension"/>
        <attr name="sliderWidth" format="dimension"/>
        <attr name="deviation" format="dimension"/>
    </declare-styleable>

</resources>